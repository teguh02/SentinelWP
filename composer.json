{
  "name": "sentinelwp/security-scanner",
  "description": "Hybrid security scanner for WordPress with ClamAV integration and AI-powered analysis using Google Gemini API",
  "type": "wordpress-plugin",
  "version": "1.0.0",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "SentinelWP Team",
      "email": "team@sentinelwp.com",
      "role": "Developer"
    }
  ],
  "homepage": "https://sentinelwp.com",
  "keywords": [
    "wordpress",
    "security",
    "malware",
    "scanner",
    "clamav",
    "ai",
    "gemini",
    "notifications",
    "threat-detection"
  ],
  "require": {
    "php": ">=7.4",
    "composer/installers": "~1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.6",
    "phpstan/phpstan": "^1.0",
    "wp-coding-standards/wpcs": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "SentinelWP\\": "includes/"
    },
    "files": [
      "helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "SentinelWP\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "lint": "phpcs --standard=WordPress .",
    "analyze": "phpstan analyze",
    "format": "phpcbf --standard=WordPress .",
    "check": [
      "@lint",
      "@analyze",
      "@test"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "extra": {
    "installer-name": "sentinelwp"
  },
  "support": {
    "issues": "https://github.com/sentinelwp/security-scanner/issues",
    "source": "https://github.com/sentinelwp/security-scanner",
    "docs": "https://docs.sentinelwp.com",
    "email": "support@sentinelwp.com"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/sentinelwp"
    }
  ]
}
